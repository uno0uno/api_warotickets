# ===========================================
# WaRo Tickets API - Environment Variables
# ===========================================

# -------------------------------------------
# DATABASE (Shared with warolabs)
# -------------------------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/warolabs
NUXT_PRIVATE_DB_USER=your_db_user
NUXT_PRIVATE_DB_HOST=localhost
NUXT_PRIVATE_DB_PASSWORD=your_db_password
NUXT_PRIVATE_DB_PORT=5432
NUXT_PRIVATE_DB_NAME=warolabs

# -------------------------------------------
# AUTHENTICATION & SECURITY
# -------------------------------------------
NUXT_PRIVATE_JWT_SECRET=your_super_secret_jwt_key_min_32_chars
BETTER_AUTH_SECRET_KEY=your_auth_secret_key_min_32_chars
NUXT_PRIVATE_TOKEN_BACKEND=database

# -------------------------------------------
# AWS SES (Email Service)
# -------------------------------------------
NUXT_PRIVATE_AWS_ACCES_KEY_ID=AKIAXXXXXXXXXXXXXXXX
NUXT_PRIVATE_AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
NUXT_PRIVATE_AWS_REGION=us-east-1
NUXT_PRIVATE_EMAIL_FROM=noreply@warotickets.com
AWS_SES_FROM_EMAIL=noreply@warotickets.com

# -------------------------------------------
# CLOUDFLARE R2 (S3-compatible storage)
# -------------------------------------------
NUXT_PRIVATE_R2_ACCESS_KEY_ID=your_r2_access_key
NUXT_PRIVATE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
NUXT_PRIVATE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
NUXT_PRIVATE_R2_BUCKET=warotickets-assets

# -------------------------------------------
# ENCRYPTION KEYS
# -------------------------------------------
NUXT_PRIVATE_PRIVATE_KEY_ENCRYPTER=your_private_key_for_encryption
NUXT_PUBLIC_PUBLIC_KEY_ENCRYPTER=your_public_key_for_encryption

# -------------------------------------------
# WOMPI - Payment Gateway (Colombia)
# -------------------------------------------
# Sandbox keys for testing
WOMPI_PUBLIC_KEY=pub_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
WOMPI_PRIVATE_KEY=prv_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
WOMPI_EVENTS_SECRET=your_wompi_events_secret_for_webhooks
WOMPI_ENVIRONMENT=sandbox

# Production keys (uncomment for production)
# WOMPI_PUBLIC_KEY=pub_prod_xxxxxxxxxxxxxxxxxxxxxxxxxx
# WOMPI_PRIVATE_KEY=prv_prod_xxxxxxxxxxxxxxxxxxxxxxxxxx
# WOMPI_ENVIRONMENT=production

# -------------------------------------------
# APPLICATION SETTINGS
# -------------------------------------------
NODE_ENV=development
NUXT_PUBLIC_BASE_URL=http://localhost:8001
FRONTEND_URL=http://localhost:3000

# FastAPI Server
FASTAPI_PORT=8001
FASTAPI_HOST=0.0.0.0
DEBUG=true

# -------------------------------------------
# CORS CONFIGURATION
# -------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8001

# -------------------------------------------
# MULTI-TENANT MAPPING (Development)
# -------------------------------------------
# Format: localhost:port=domain.com,localhost:port2=other-domain.com
LOCALHOST_MAPPING=localhost:3000=warotickets.com,localhost:3001=demo.warotickets.com

# -------------------------------------------
# DISCORD WEBHOOKS (Optional)
# -------------------------------------------
DISCORD_WEBHOOK_URL=
DISCORD_ERROR_WEBHOOK_URL=
DISCORD_SALES_WEBHOOK_URL=
